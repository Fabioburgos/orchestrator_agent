# .env.example

# --- Configuración de Azure OpenAI --- #
AZURE_OPENAI_DEPLOYMENT_NAME=your-azure-openai-deployment-name
AZURE_OPENAI_API_VERSION=your-azure-openai-api-version
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key

# --- Microsoft Graph API (para obtener emails) --- #
MICROSOFT_GRAPH_TENANT_ID=your-microsoft-graph-tenant-id
MICROSOFT_GRAPH_CLIENT_ID=your-microsoft-graph-client-id
MICROSOFT_GRAPH_CLIENT_SECRET=your-microsoft-graph-client-secret

# --- Dominio Autorizado para envío de correos --- #
DOMINIO_AUTORIZADO=your-authorized-domain
TARGET_USER_EMAIL=your-target-user-email

# --- Configuración de Descubrimiento de Herramientas MCP (formato JSON) --- #
MCP_SERVERS_CONFIG={"classifier": {"transport": "streamable_http", "url": "http://127.0.0.1:8000/mcp"}, "folder-creator": {"transport": "streamable_http", "url": "http://127.0.0.1:8000/mcp"}}